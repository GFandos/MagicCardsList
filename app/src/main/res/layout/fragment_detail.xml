<?xml version="1.0" encoding="utf-8"?>

<layout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.a47989768s.magiccardslist.DetailActivityFragment"
        tools:showIn="@layout/activity_detail"
        android:backgroundTint="@android:color/darker_gray"
        android:background="@android:color/darker_gray">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/cardImage"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintRight_toLeftOf="@+id/guideline3"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintTop_toTopOf="@+id/guideline4" />

        <android.support.constraint.Guideline
            android:layout_width="384dp"
            android:layout_height="0dp"
            android:id="@+id/guideline2"
            app:layout_constraintGuide_begin="316dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="316dp"
            tools:layout_editor_absoluteX="0dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            app:layout_constraintGuide_begin="202dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="202dp" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/cardName"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cardImage"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.56"
            app:layout_constraintVertical_bias="0.58000004"
            tools:textColor="@android:color/black"
            android:textColor="@android:color/black" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/cardType"
            android:textColorLink="@android:color/black"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardName" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/cardRarity"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.38"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardType"
            android:textColor="@android:color/black" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/cardDescription"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            app:layout_constraintGuide_begin="67dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="0dp" />

    </android.support.constraint.ConstraintLayout>

</layout>